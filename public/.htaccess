# North Head Digital - Apache Configuration
# This file provides fallback routing for Apache servers

# Enable rewrite engine
RewriteEngine On

# Handle portal routes
RewriteRule ^portal$ /portal.html [L]

# Handle portal app routes (React SPA)
RewriteRule ^portal/app/.*$ /portal/app/index.html [L]

# Handle all other routes - serve main website
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]

# Security headers
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"
Header always set X-Content-Type-Options nosniff
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# Cache static assets
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# Cache HTML files for shorter time
<FilesMatch "\.html$">
    Header set Cache-Control "public, max-age=0, must-revalidate"
</FilesMatch>
